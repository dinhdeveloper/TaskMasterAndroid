<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBottomSheetCommon"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="CircleShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextViewAddressValue" parent="Widget.AppCompat.TextView">
        <item name="android:drawableEnd">@drawable/check_done</item>
        <item name="android:background">@drawable/bg_item_detail_black</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:minHeight">@dimen/default_edittext_min_height</item>
        <item name="android:maxLength">160</item>
        <item name="android:textSize">@dimen/font16_sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:paddingHorizontal">3dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="EditextCustom" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_item_detail_black</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:minHeight">@dimen/default_edittext_min_height</item>
        <item name="android:maxLength">160</item>
        <item name="android:textSize">@dimen/font16_sp</item>
        <item name="android:textColor">@color/D2</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TopSheet_DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_out_from_top</item>
        <item name="android:windowExitAnimation">@anim/slide_back_to_top</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Other theme attributes -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="TopSheet_DialogAnimation">
        <!-- Customize attributes for the BottomSheetDialog theme here -->
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <!-- Add more customizations as needed -->
    </style>

    <style name="Animation.Design.TopSheetDialog" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/top_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/top_sheet_slide_out</item>
    </style>

    <style name="Widget.Design.TopSheet.Modal" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:elevation">@dimen/top_sheet_modal_elevation</item>
        <item name="behavior_peekHeight">@dimen/top_sheet_modal_peek_height</item>
        <item name="behavior_hideable">true</item>
    </style>

</resources>