<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/itemRoot"
    android:weightSum="11"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtIdOrder"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/table_content_cell_bg"
        android:gravity="center"
        android:padding="3dp"
        android:textColor="@color/black"
        android:textSize="@dimen/font16_sp"
        tools:text="Đơn gom" />

    <TextView
        android:id="@+id/txtLocation"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/table_content_cell_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:padding="3dp"
        android:textColor="@color/black"
        android:textSize="@dimen/font16_sp"
        tools:text="860/29 Xô Viết Nghệ Tĩnh, phường 25, quận Bình Thạnh, TPHCM" />

    <TextView
        android:id="@+id/txtPerson"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/table_content_cell_bg"
        android:gravity="center"
        android:padding="3dp"
        android:textColor="@color/black"
        android:textSize="@dimen/font16_sp"
        tools:text="Người" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/table_content_cell_bg"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/font16_sp"
        tools:text="Tình trạng" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/table_content_cell_bg"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/font16_sp"
        tools:text="Ưu tiên" />

</LinearLayout>