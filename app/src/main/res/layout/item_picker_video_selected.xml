<?xml version="1.0" encoding="utf-8"?>
<com.dinhtc.taskmaster.common.widgets.image_picker.FitWidthRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:view_aspectRatio="1">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_imageTile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:scaleType="centerCrop"/>

    <View
        android:id="@+id/imageTile_selected_darken"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageTile_unSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/radio_uncheck"
        android:visibility="gone"
        tools:visibility="visible"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageTile_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/radio_check"
        android:layout_centerInParent="true"
        tools:visibility="visible"/>

</com.dinhtc.taskmaster.common.widgets.image_picker.FitWidthRelativeLayout>