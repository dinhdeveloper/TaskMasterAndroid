<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/tvTTDH"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_title"
                android:elevation="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="@string/chi_tiet_cong_viec"
                    android:textAllCaps="true"
                    android:textColor="#00428E"
                    android:textSize="@dimen/fontToolbar" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutViewOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_one"
                android:elevation="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    android:weightSum="3">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Mã công việc:"
                        android:textColor="@color/color_title"
                        android:textSize="@dimen/font17._sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tvIdJob"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="start"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font17._sp"
                        tools:text="SADFGHJ" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    android:weightSum="3">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/tinh_trang"
                        android:textColor="@color/color_title"
                        android:textSize="@dimen/font17._sp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvStateDecs"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="start"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font17._sp"
                        tools:text="Mới" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    android:weightSum="3">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_vertical"
                        android:text="@string/dia_diem"
                        android:textColor="@color/color_title"
                        android:textSize="@dimen/font17._sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvNamePoint"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="start"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font17._sp"
                        tools:text="860/29 Xô Viết Nghệ Tĩnh, phường 25, quận Bình Thạnh, TPHCM" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    android:weightSum="3">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_vertical"
                        android:text="@string/dia_chi"
                        android:textColor="@color/color_title"
                        android:textSize="@dimen/font17._sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvNameAddress"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="start"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font17._sp"
                        tools:text="@string/string_demo_2" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    android:weightSum="3">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_vertical"
                        android:text="@string/thanh_tien"
                        android:textColor="@color/color_title"
                        android:textSize="@dimen/font17._sp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvPrice"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="start"
                        android:text="0 VNĐ"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font17._sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/color_line" />

                <RadioGroup
                    android:id="@+id/layoutChuyenKhoan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radioChuyenKhoan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="Chuyển khoản"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textSize="@dimen/font17._sp" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radioChuaThanhToan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Chưa th.toán"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textSize="@dimen/font17._sp" />
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:weightSum="3">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_vertical"
                        android:text="Ưu tiên: "
                        android:textColor="@color/color_title"
                        android:textSize="@dimen/font17_sp" />

                    <RelativeLayout
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <com.dinhtc.taskmaster.common.widgets.spinner.ProvinceSpinner
                            android:id="@+id/edtSelectUuTien"
                            style="@style/TextViewAddressValue"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="end"
                            android:hint="Chọn độ ưu tiên"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font17_sp" />

                        <TextView
                            android:id="@+id/tvUuTien"
                            android:visibility="gone"
                            android:background="@color/white"
                            android:layout_centerInParent="true"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="start|center"
                            android:inputType="number"
                            android:paddingHorizontal="10dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font17._sp"
                            tools:text="Uu tiên 1"/>
                    </RelativeLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/color_line" />
                <LinearLayout
                    android:id="@+id/layoutNVUng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:weightSum="3">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_vertical"
                        android:text="@string/nv_ung"
                        android:textColor="@color/color_title"
                        android:textSize="@dimen/font17._sp" />

                    <RelativeLayout
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <com.dinhtc.taskmaster.common.widgets.edittext.MoneyEditText
                            android:id="@+id/edtNVUng"
                            style="@style/EditextCustom"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="end"
                            android:hint="Nhập số tiền muốn ứng"
                            android:inputType="number"
                            android:paddingHorizontal="10dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font17._sp" />

                        <TextView
                            android:id="@+id/tvNVUng"
                            android:background="@color/white"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="start|center"
                            android:inputType="number"
                            android:paddingHorizontal="10dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font17._sp"
                            tools:text="@string/app_name"/>
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:id="@+id/layoutChuyenViecToi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:weightSum="5">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_vertical"
                        android:text="@string/chuyen_viec_toi"
                        android:textColor="@color/color_title"
                        android:textSize="@dimen/font17._sp" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content">
                        <com.dinhtc.taskmaster.common.widgets.spinner.ProvinceSpinner
                            android:id="@+id/selectNV"
                            style="@style/TextViewAddressValue"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="end"
                            android:hint="Chọn nhân viên"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font17._sp" />

                        <TextView
                            android:id="@+id/tvSelectNV"
                            android:background="@color/white"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="end"
                            android:inputType="number"
                            android:paddingHorizontal="10dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font17._sp" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:weightSum="3">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_vertical"
                        android:text="Nhân viên 1:"
                        android:textColor="@color/color_title"
                        android:textSize="@dimen/font17._sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvNV1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="start"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font17._sp"
                        tools:text="Mới" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:weightSum="3">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_vertical"
                        android:text="Nhân viên 2:"
                        android:textColor="@color/color_title"
                        android:textSize="@dimen/font17._sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvNV2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="start"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font17._sp"
                        tools:text="Mới" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:weightSum="3">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_vertical"
                        android:text="Nhân viên 3:"
                        android:textColor="@color/color_title"
                        android:textSize="@dimen/font17._sp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvNV3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="start"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font17._sp"
                        tools:text="Mới" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:id="@+id/layoutGhiChu"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/ghi_chu_2"
                        android:textColor="@color/color_title"
                        android:textSize="@dimen/font17._sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvGhiChu"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="start"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font17._sp"
                            tools:text="@string/appbar_scrolling_view_behavior" />
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtGhiChu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/bg_edittext"
                            android:gravity="top|start"
                            android:inputType="textMultiLine"
                            android:lines="4"
                            android:minLines="4"
                            android:padding="5dp"
                            android:scrollbarSize="2dp"
                            android:scrollbars="vertical" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="20dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/btnVatLieu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/shadow_2"
                        android:elevation="2dp"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:minWidth="100dp"
                        android:padding="15dp"
                        android:text="Vật liệu"
                        android:textColor="@color/color_title"
                        android:textSize="@dimen/font17._sp" />

                    <TextView
                        android:id="@+id/btnAnh"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/shadow_2"
                        android:elevation="2dp"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:minWidth="100dp"
                        android:padding="15dp"
                        android:text="Ảnh"
                        android:textColor="@color/color_title"
                        android:textSize="@dimen/font17._sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="20dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/btnDaLamGon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/shadow_2"
                        android:elevation="2dp"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:minWidth="100dp"
                        android:padding="15dp"
                        android:text="@string/da_lam_gon"
                        android:textColor="@color/color_title"
                        android:textSize="@dimen/font17._sp" />

                    <TextView
                        android:id="@+id/btnDaCan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/shadow_2"
                        android:elevation="2dp"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:minWidth="100dp"
                        android:padding="15dp"
                        android:text="@string/da_can"
                        android:textColor="@color/color_title"
                        android:textSize="@dimen/font17._sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btnDaXong"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
