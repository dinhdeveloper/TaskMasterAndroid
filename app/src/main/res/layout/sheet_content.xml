<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layoutSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginVertical="3dp"
                android:weightSum="3">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/radioCuaToi"
                    android:drawableStart="@drawable/check_done"
                    android:background="@drawable/bg_check_search"
                    android:drawablePadding="5dp"
                    android:padding="10dp"
                    android:layout_margin="2dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="Cuả tôi"
                    android:textSize="@dimen/font16_sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/radioNhom"
                    android:drawableStart="@drawable/check_done"
                    android:background="@drawable/bg_item_detail"
                    android:drawablePadding="5dp"
                    android:padding="10dp"
                    android:layout_margin="2dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="Nhóm"
                    android:textSize="@dimen/font16_sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/radioTatCaNguoi"
                    android:drawableStart="@drawable/check_done"
                    android:background="@drawable/bg_item_detail"
                    android:drawablePadding="5dp"
                    android:padding="10dp"
                    android:layout_margin="2dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="Tất cả"
                    android:textSize="@dimen/font16_sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="3dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/radioChuaXong"
                    android:drawableStart="@drawable/check_done"
                    android:background="@drawable/bg_check_search"
                    android:layout_margin="2dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="Chưa xong"
                    android:textSize="@dimen/font16_sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/radioDaXong"
                    android:drawableStart="@drawable/check_done"
                    android:background="@drawable/bg_item_detail"
                    android:drawablePadding="2dp"
                    android:padding="10dp"
                    android:layout_margin="2dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="Đã xong"
                    android:textSize="@dimen/font16_sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/radioTatCaTask"
                    android:drawableStart="@drawable/check_done"
                    android:background="@drawable/bg_item_detail"
                    android:drawablePadding="5dp"
                    android:padding="10dp"
                    android:layout_margin="2dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="Tất cả"
                    android:textSize="@dimen/font16_sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="3dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/daThanhToan"
                    android:drawableStart="@drawable/check_done"
                    android:background="@drawable/bg_check_search"
                    android:drawablePadding="5dp"
                    android:padding="5dp"
                    android:layout_margin="2dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="Đã thanh toán"
                    android:textSize="@dimen/font16_sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/chuaThanhToan"
                    android:drawableStart="@drawable/check_done"
                    android:background="@drawable/bg_item_detail"
                    android:drawablePadding="5dp"
                    android:padding="5dp"
                    android:layout_margin="2dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="Chưa thanh toán"
                    android:textSize="@dimen/font16_sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="3dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="3">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/radioHomNay"
                    android:drawableStart="@drawable/check_done"
                    android:background="@drawable/bg_check_search"
                    android:drawablePadding="5dp"
                    android:padding="5dp"
                    android:layout_margin="2dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="Hôm nay"
                    android:textSize="@dimen/font16_sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/radioHomQua"
                    android:drawableStart="@drawable/check_done"
                    android:background="@drawable/bg_item_detail"
                    android:drawablePadding="5dp"
                    android:padding="5dp"
                    android:layout_margin="2dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="Hôm qua"
                    android:textSize="@dimen/font16_sp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio_c"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tất cả"
                    android:textSize="@dimen/font16_sp"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:id="@+id/btnSeach"
                android:text="Tìm kiếm"
                android:layout_margin="20dp"
                android:background="@drawable/bg_no_strock_red"
                android:textColor="@color/color_red"
                android:drawablePadding="10dp"
                android:drawableEnd="@drawable/arrow_right_svgrepo_com"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/font16_sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </FrameLayout>

</LinearLayout>